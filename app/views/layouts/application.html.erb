<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Rails Ideas</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
</head>
<body>

  <nav class="navbar navbar-expand navbar-light bg-light">

    <%= link_to "Idea Factory", root_path, class: "navbar-brand" %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <spam class="nav-link" href="#" disabled>Hello, Mr. <%= current_user.full_name %></spam>
          </li>
        <% end %>
        <li class="nav-item">
          <!-- <%= link_to "New Idea", new_idea_path, class: "nav-link" %> -->
          <button type="button" class="btn nav-link" data-toggle="modal" data-target="#new-idea">
            New Idea
          </button>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Sign Out", session_path, method: :delete, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign In", new_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>

  <div class="modal fade" id="new-idea" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="new-idea-label">New Idea</h5>
          <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= render template: 'ideas/new' -%>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="new-idea-save">Save idea</button>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <%= yield %>
  </div>
</body>
</html>
